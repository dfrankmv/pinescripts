process(Algo algo, t.Trailing tr) =>
    tr.run()
    algo.pre_process()
    if algo.is_bar_used()
        algo.order_amt /= ORDER_FACTOR
        tr.distance -= DIST_INCREMENT
    if trade_signal(algo, tr)
        pre_trade(algo)
        algo.trade(amt=algo.order_amt, trade_id="o" + str.tostring(algo.nof_orders + 1))
        post_trade(algo, tr)
    0






